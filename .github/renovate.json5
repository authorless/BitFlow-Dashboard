{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergePatch",
    ":automergeMinor",
    ":automergeDigest",
    ":disableDependencyDashboard",
    ":disableRateLimiting",
    ":label(ðŸ¤– Automatic)"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "groupName": "core deps",
      "matchPackageNames": [
        "/prisma/",
        "/pg/",
        "/nuxt/",
        "/vue/",
        "/chart.js/",
        "/tailwindcss/"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev deps",
      "automerge": true
    }
  ],
  "git-submodules": {
    "enabled": true
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeBranch",
    ":automergePatch",
    ":automergeMinor",
    ":automergeDigest",
    ":disableRateLimiting",
    ":label(üîÅ Auto)"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["prisma", "pg", "nuxt", "vue", "chart.js", "tailwindcss"],
      "groupName": "core deps",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev deps",
      "automerge": true
    }
  ],
  "git-submodules": {
    "enabled": true
  }
}

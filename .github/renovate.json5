{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':automergeBranch',
    ':automergePatch',
    ':automergeMinor',
    ':automergeDigest',
    ':disableRateLimiting',
    ':label(üîÅ Auto)',
  ],
  automerge: true,
  packageRules: [
    {
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      automerge: true,
    },
    {
      groupName: 'core deps',
      automerge: true,
      matchPackageNames: [
        '/prisma/',
        '/pg/',
        '/nuxt/',
        '/vue/',
        '/chart.js/',
        '/tailwindcss/',
      ],
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      groupName: 'dev deps',
      automerge: true,
    },
  ],
  'git-submodules': {
    enabled: true,
  },
}
